{
    "name": "ubirak/rest-api-behat-extension",
    "description": "Rest Api Extension for Behat",
    "license": "MIT",
    "type": "behat-extension",
    "keywords": [
        "api",
        "json",
        "rest",
        "test"
    ],
    "authors": [
        {
            "name": "Community contributors",
            "homepage": "https://github.com/ubirak/rest-api-behat-extension/contributors"
        }
    ],
    "homepage": "https://github.com/ubirak/rest-api-behat-extension",
    "require": {
        "php": ">=8.2",
        "atoum/atoum": "^4.3",
        "behat/behat": "^3.10",
        "justinrainbow/json-schema": "^6",
        "mtdowling/jmespath.php": "^2.3",
        "php-http/client-common": "^2.3",
        "php-http/discovery": "^1.13",
        "php-http/message": "^1.11",
        "php-http/message-factory": "^1.1",
        "psr/http-message": "^2.0",
        "symfony/config": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/http-foundation": "^7.0",
        "symfony/property-access": "^7.0",
        "tolerance/tolerance": "^0.4.2"
    },
    "require-dev": {
        "dantleech/gherkin-lint": "^0.2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "ergebnis/composer-normalize": "^2.48",
        "guzzlehttp/psr7": "^2.0",
        "http-interop/http-factory-guzzle": "^1.1.1",
        "php-http/guzzle7-adapter": "^0.1.1",
        "php-http/mock-client": "^1.0",
        "rector/rector": "^2.1",
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/process": "^7.0"
    },
    "replace": {
        "rezzza/json-api-behat-extension": "self.version",
        "rezzza/rest-api-behat-extension": "self.version"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Ubirak\\RestApiBehatExtension\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true
        },
        "optimize-autoloader": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "6.x-dev"
        }
    },
    "scripts": {
        "lint": [
            "phpcs",
            "rector --clear-cache --dry-run",
            "gherkinlint lint features"
        ],
        "lint-fix": [
            "rector --clear-cache",
            "phpcbf"
        ],
        "reset": "rm -Rf vendor vendor-bin composer.lock",
        "start-server": "php -S 127.0.0.1:8888 -t \"$(pwd)/www\" &",
        "stop-server": "kill -9 $(lsof -t -i:8888)",
        "test-bdd": "vendor/bin/behat -f progress",
        "test-unit": "vendor/bin/atoum --use-light-report"
    }
}
